{% extends "layouts/main.njk" %}

{% block main %}
  {{ xGovukMasthead({
    phaseBanner: {
      text: 'This guidance is new. Help us improve it and <a href="#" class="govuk-link govuk-link--inverse" rel="noreferrer noopener" target="_blank">give your feedback (opens in new tab)</a>.',
      tag: {
        text: "Beta"
      }
    },
    title: {
      html: title | smart
    } if title,
    description: {
      html: description | markdown("inline") | noOrphans
    } if description,
    breadcrumbs: {
      classes: "govuk-!-display-none-print",
      items: breadcrumbItems
    } if showBreadcrumbs
  }) }}

  {{ super() }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <section class="govuk-grid-column-two-thirds-from-desktop">
    {{ appProseScope(content) if content }}

    {% if paginationHeading %}
      <h2 class="govuk-heading-l govuk-!-font-size-27">
        {{ paginationHeading }}
      </h2>
    {% endif %}

    {{ appDocumentList({
      headingLevel: 3 if paginationHeading else 2,
      classes: "app-document-list--large",
      items: pagination.items
    }) }}

    {{ govukPagination({
      previous: {
        href: pagination.href.previous
      },
      next: {
        href: pagination.href.next
      },
      items: pagination | itemsFromPagination
    }) if pagination.pages.length > 1 }}
  </section>

  {% if aside or related %}
  <div class="govuk-grid-column-one-third-from-desktop">
    {% include "layouts/shared/related.njk" %}
  </div>
  {% endif %}
</div>
{% endblock %}
