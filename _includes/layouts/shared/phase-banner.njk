{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}

{% if layout == "collection" or layout == "homepage" %}
<div class="govuk-phase-banner x-govuk-phase-banner--inverse">
      <p class="govuk-phase-banner__content">
        <strong class="govuk-tag govuk-phase-banner__content__tag x-govuk-tag--inverse">
          Beta
        </strong>
        <span class="govuk-phase-banner__text">
          This guidance is new. Help us improve it and <a href="#" class="govuk-link govuk-link--inverse" rel="noreferrer noopener" target="_blank">give your feedback (opens in new tab)</a>.
        </span>
      </p>
    </div>
{% else %}
{{ govukPhaseBanner({
  tag: {
    text: "Beta"
  },
  html: 'This guidance is new. Help us improve it and <a href="#" class="govuk-link" rel="noreferrer noopener" target="_blank">give your feedback (opens in new tab)</a>.'
}) }}
{% endif %}